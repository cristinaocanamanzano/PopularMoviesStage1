<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetail"
    android:orientation="vertical">

    <TextView
        android:id="@+id/movie_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:padding="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster_iv"
                android:layout_width="175dp"
                android:layout_height="250dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/user_rating_label"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/poster_iv"
                android:padding="10dp"
                android:text="@string/average_rating"
                android:layout_toEndOf="@id/poster_iv" />

            <TextView
                android:id="@+id/user_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_rating_label"
                android:padding="10dp"
                android:layout_toEndOf="@id/user_rating_label" />

            <TextView
                android:id="@+id/release_date_label"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/poster_iv"
                android:layout_below="@id/user_rating_label"
                android:padding="10dp"
                android:text="@string/release_date"
                android:layout_toEndOf="@id/poster_iv" />

            <TextView
                android:id="@+id/release_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/release_date_label"
                android:layout_below="@id/user_rating_tv"
                android:padding="10dp"
                android:layout_toEndOf="@id/release_date_label" />


            <TextView
                android:id="@+id/overview_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/poster_iv"
                android:padding="10dp"/>


        </RelativeLayout>
    </ScrollView>


</LinearLayout>